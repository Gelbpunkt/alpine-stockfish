From: Jens Reidel <jens@troet.org>
Date: Fri, 10 Apr 2020 12:10:46 +0200
Subject: [PATCH] build static

---
 .gitignore   | 3 +++
 src/Makefile | 5 +++--
 2 files changed, 6 insertions(+), 2 deletions(-)
 create mode 100644 .gitignore

diff --git a/.gitignore b/.gitignore
new file mode 100644
index 00000000..b1b9742e
--- /dev/null
+++ b/.gitignore
@@ -0,0 +1,3 @@
+*.o
+src/stockfish
+src/.depend
diff --git a/src/Makefile b/src/Makefile
index 15ad6353..750be4cd 100644
--- a/src/Makefile
+++ b/src/Makefile
@@ -515,13 +516,13 @@ clang-profile-use:
 gcc-profile-make:
 	$(MAKE) ARCH=$(ARCH) COMP=$(COMP) \
 	EXTRACXXFLAGS='-fprofile-generate' \
-	EXTRALDFLAGS='-lgcov' \
+	EXTRALDFLAGS='-lgcov -Wl,-z,stack-size=271360' \
 	all
 
 gcc-profile-use:
 	$(MAKE) ARCH=$(ARCH) COMP=$(COMP) \
 	EXTRACXXFLAGS='-fprofile-use -fno-peel-loops -fno-tracer' \
-	EXTRALDFLAGS='-lgcov' \
+	EXTRALDFLAGS='-lgcov -Wl,-z,stack-size=271360' \
 	all
 
 icc-profile-make:
